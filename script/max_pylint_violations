#!/bin/bash
DEFAULT_MAX=15

pylint xblock | tee /tmp/pylint-xblock.log
ERR=`grep -E "^[C|R|W|E]:" /tmp/pylint-xblock.log | wc -l`
MAX=${1-$DEFAULT_MAX}
if [ $ERR -gt $MAX ]; then
    echo "too many pylint violations: $ERR (max is $MAX)"
    exit 1
else
    echo "$ERR pylint violations in total (max is $MAX)"
    exit 0
fi
